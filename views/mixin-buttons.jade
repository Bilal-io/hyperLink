mixin forwardBack(leftFunction, rightFunction)
    button.btn.btn-success.btn-large#leftButton(type='button', onclick= leftFunction)
       span.glyphicon.glyphicon-arrow-left
       | &nbsp; Left
    span &nbsp;
    button.btn.btn-success.btn-large#rightButton(type='button', onclick= rightFunction)
       | Right &nbsp;
       span.glyphicon.glyphicon-arrow-right

mixin downloadButton(title, downloadFunction)
    button.btn.btn-primary(type='button', onclick= downloadFunction)
        | #{title} &nbsp;&nbsp;
        span.glyphicon.glyphicon-download

mixin clearButton(title, clearFunction)
    button.btn.btn-primary(type='button', onclick= clearFunction)
        | #{title} &nbsp;&nbsp;
        span.glyphicon.glyphicon-repeat
